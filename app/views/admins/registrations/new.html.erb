<div class="container">
  <div class="row no-gutters">
      <h6 class="text-dark bg-light p-1 mb-5 mt-5">新規管理者登録</h6>
  </div>
  <div class="row no-gutters">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "admins/shared/error_messages", resource: resource %>
    <table class="table">
      <tr>
        <th style="border:none;"><%= f.label :名前%></th>
        <td style="border:none;"></td>
        <td style="border:none;"><%= f.text_field :name, autofocus: true %></td>
      </tr>
      <tr>
        <th style="border:none;"><%= f.label :メールアドレス %></th>
        <td style="border:none;"></td>
        <td style="border:none;"><%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com" %></td>
      </tr>
      <tr>
        <th style="border:none;">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %>
        </th>
        <td style="border:none;"></td>
        <td style="border:none;"><%= f.password_field :password, autocomplete: "new-password" %></td>
      </tr>
      <tr>
        <th style="border:none;"><%= f.label :パスワード（確認用） %></th>
        <td style="border:none;"></td>
        <td style="border:none;"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
      </tr>
      <tr>
        <th style="border:none;"></th>
        <td style="border:none;"></td>
        <td style="border:none;"><%= f.submit "新規登録", class: "btn btn-dark" %></td>
      </tr>
    </table>
    <% end %>
  </div>
  <div class="row no-gutters">
    <h6 class="text-dark bg-light p-1 mb-0">既に登録済みの方</h6>
  </div>
  <div class="row no-gutters">
    <%= link_to "こちら", new_admin_session_path %>からログインしてください。
  </div>
</div>
<%#= render "admins/shared/links" %>
