<div class="container">
  <div class="row no-gutters">
      <h6 class="text-dark bg-light p-1 mb-5 mt-5">新規会員登録</h6>
  </div>
  <div class="row no-gutters">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "staffs/shared/error_messages", resource: resource %>
    <table class="table">
      <tr>
        <th style="border:none;">名前</th>
        <td style="border:none;"><%= f.label :（姓）%></td>
        <td style="border:none;"><%= f.text_field :last_name, autofocus: true, placeholder: "山田" %></td>
        <td style="border:none;"><%= f.label :（名） %></td>
        <td style="border:none;"><%= f.text_field :first_name, placeholder: "花子" %></td>
      </tr>
      <tr>
        <th style="border:none;">フリガナ</th>
        <td style="border:none;"><%= f.label :（セイ）%></td>
        <td style="border:none;"><%= f.text_field :last_name_kana, placeholder: "ヤマダ" %></td>
        <td style="border:none;"><%= f.label :（メイ） %></td>
        <td style="border:none;"><%= f.text_field :first_name_kana, placeholder: "ハナコ" %></td>
      </tr>
      <tr>
        <th style="border:none;"><%= f.label :メールアドレス %></th>
        <td style="border:none;"></td>
        <td style="border:none;"><%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com" %></td>
      </tr>
      <tr>
        <th style="border:none;"><%= f.label :プロフィール画像 %></th>
        <td style="border:none;"></td>
        <!--<td style="border:none;"><%#= f.attachment_field :profile_image %></td>-->
      </tr>
      <tr>
        <th style="border:none;">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %>
        </th>
        <td style="border:none;"></td>
        <td style="border:none;"><%= f.password_field :password, autocomplete: "new-password" %></td>
      </tr>
      <tr>
        <th style="border:none;"><%= f.label :パスワード（確認用） %></th>
        <td style="border:none;"></td>
        <td style="border:none;"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
      </tr>
      <tr>
        <th style="border:none;"></th>
        <td style="border:none;"></td>
        <td style="border:none;"><%= f.submit "新規登録", class: "btn btn-dark" %></td>
      </tr>
    </table>
    <% end %>
  </div>
  <div class="row no-gutters">
    <h6 class="text-dark bg-light p-1 mb-0">既に登録済みの方</h6>
  </div>
  <div class="row no-gutters">
    <%= link_to "こちら", new_staff_session_path %>からログインしてください。
  </div>
</div>