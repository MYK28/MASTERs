<%= form_with url:admin_staffs_path, method: :get, local: true do |f| %>
  <%= f.label :search, "名前" %>
  <%= f.text_field :search %>
  <%= f.submit"検索",:last_name => nil, :first_name => nil %>
<% end %>

<section class="text-gray-600 body-font">
  <div class="container px-5 py-24 mx-auto">
    <div class="flex flex-col text-center w-full mb-20">
      <h1 class="sm:text3x1 text-2x1 font-medium title-font mb-4 text-gray-900">Our Team</h1>
    </div>
  </div>
  <% @staffs.each do |staff| %>
  <div class="flex flex-wrap -m-2">
    <div class="p-2 1g:w-1/3 md:w-1/2 w-full">
      <div class="h-full flex items-center border-gray-200 border p-4 rounded-1g">
        <div class="flex-grow">
          <h6 class="text-gray-900 title-font font-medium">
            <%= attachment_image_tag staff, :profile_image, fallback: "no_image1.jpg", size: "60x60" %>
            <%= staff.last_name %><%= staff.first_name %>
            <%= link_to "詳細", admin_staff_path(staff.id), class:"btn btn-dark float-right clearfix"%>
          </h6>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <%= paginate @staffs %>
</section>