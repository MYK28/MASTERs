<section class="text-gray-600 body-font">
  <div class="container px-5 py-24 mx-auto">
    <div class="flex flex-col text-center w-full mb-20">
      <h1 class="sm:text3x1 text-2x1 font-medium title-font mt-4 mb-3 text-gray-900">Information</h1>
    </div>
  </div>
</section>
<div class="container">
  <div class="text-center">
    <%= link_to new_admin_information_path do %>
      <button type="button" class="btn btn-dark rounded-circle p-0 mb-3" style="width:4rem;height:4rem;">＋</button>
    <% end %>
  </div>
  <div class="row mt-10">
    <div class="col-md-10 mx-auto">
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th scope="col"></th>
            <th scope="col">投稿日</th>
            <th scope="col"></th>
            <th scope="col">投稿者</th>
            <th scope="col">タイトル</th>
            <th scopr="col"></th>
          </tr>
        </thead>
        <tbody>
          <% @informations.each do |information| %>
          <tr>
            <th scope="row"></th>
            <td><%= information.created_at %></td>
            <td><%= attachment_image_tag information, :image, fallback: "no_image1.jpg", class:"comment-image", size: "40x40" %></td>
            <td><%= information.admin.name %></td>
            <td><%= information.title %></td>
            <td><%= link_to "詳細", admin_information_path(information), class:"btn btn-dark" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @informations %>
    </div>
  </div>
</div>